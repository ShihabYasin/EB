<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eBanking</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/simple-sidebar.css" rel="stylesheet" />
    <link href="~/Content/intlTelInput.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/intlTelInput.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("eBanking", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">            
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container">
        <div id="mainContentPage" class="col-sm-12  col-md-12  main">
            @RenderBody()
        </div>

      
        @*<div class="row">
            <hr />
            <footer>
                <p style="margin-left:10px;">&copy; @DateTime.Now.Year - Arrivo Ltd. All rights reserved.</p>
            </footer>
        </div>*@
    </div>

    <div id="footer" class="pull-right">
        <div class="pull-right">
            &copy; @DateTime.Now.Year - AmarTaka - All rights reserved.
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>

