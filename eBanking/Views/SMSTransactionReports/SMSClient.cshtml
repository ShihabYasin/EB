@{
    ViewBag.Title = "SMSClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
<div class="container">
    <h2 class="text-center page-header">SMSClient System Status</h2>
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="bordered-container">
                <span class="border-title">SMS Client</span>
                <div class="bordered-container-inner">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Client Id</th>
                                <th>System Status</th>
                                <th>Time &amp; Date</th>
                                <th>Check Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>501</td>
                                <td>@Html.Label((string)ViewBag.Status) </td>
                                <td>@DateTime.Now.ToString()</td>
                                <td><input type="submit" class="btn btn-primary" name="Check" id="Check" value="Check" onclick="location.href='@Url.Action("SMSClient", "SMSTransactionReports")'" /></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>

</div>
