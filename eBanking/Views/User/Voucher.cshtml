

@model eBanking.Models.Pin
@{
    ViewBag.Title = "Voucher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="text-center page-header">Recharge</h3>


<div class="container">
    <div class="bordered-container">
        <span class=" border-title">
            Voucher Recharge
        </span>
        <div class="bordered-container-inner">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)


                    @if (ViewBag.Message != null)
                    {
                        <div class="form-group">
                            <label style="color:red" class="control-label col-md-7">@ViewBag.Message </label>
                        </div>
                    }
                    <div class="form-group">

                        <label class="control-label col-md-3">Voucher Number</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.PinCode, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PinCode)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <input type="submit" value="Recharge" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
        @*<div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@
    </div>
</div>


@if (ViewBag.Message == "You are successfully recharged") 
{ 
    <script type="text/javascript">
        $(document).ready(function () {
            $('#PinCode').val("");
        })
       

    </script>

}