@model eBanking.Models.UserCashInViewModel
@{
    ViewBag.Title = "eBankingCashIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center page-header">Distributor</h3>
@*<hr class="page-header-seperator" />*@
<div class="container">
    <div class="bordered-container">
        <span class=" border-title">
            eBanking Cash In
        </span>
        <div class="bordered-container-inner">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                if (ViewBag.UserName != null)
                {
                <div class="form-horizontal">
                    @if (ViewBag.Status != null && ViewBag.Status == 30)
                    {
                        <div class="alert alert-success">@ViewBag.Message</div>
                    }
                    else if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Message</div>
                    }
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.DistributorId, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            
                            @Html.DropDownListFor(model => model.DistributorId, ViewBag.UserName as SelectList, "--Please Select a User--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DistributorId)
                            
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Credit", new { @class = "control-label col-md-2" })

                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.eBankingCredit, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.eBankingCredit)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Received Amount", new { @class = "control-label col-md-2" })

                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Price)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LocalCurrencyId, new { @class = "control-label col-md-2" })

                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.LocalCurrencyId, ViewBag.Currency as SelectList, "--Please select a Currency--", new { @class = "form-control" })

                            @Html.ValidationMessageFor(model => model.LocalCurrencyId)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ConversionRate, new { @class = "control-label col-md-2" })

                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.ConversionRate, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ConversionRate)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2">
                            <input type="submit" name="Submit" value="Cash In" class="btn btn-success" />
                        </div>
                        @*<div class="col-md-offset-1 col-md-2">
                            <input type="submit" name="Submit" value="Cash Out" class="btn btn-danger" />
                        </div>*@
                    </div>
                    @*<div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Cash Out" class="btn btn-danger" />
                        </div>
                    </div>*@
                </div>
                }
            }
        </div>

        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-xs" })

    </div>
</div>

