<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eBanking</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    @*@Scripts.Render("~/bundles/jquery")*@

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/simple-sidebar.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

 
    <!-- Menu Toggle Script -->
    
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="~/Scripts/ie10-viewport-bug-workaround.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <button type="button" class="pull-left menu-button" id="menu-toggle">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("eBanking", "Index", "Home", null, new { @class = "navbar-brand", style="color:white" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="starter-template">
            <div id="wrapper" class="">
                <!-- Sidebar -->
                <div id="sidebar-wrapper">
                    @Html.Partial("_MenuPartial")
                </div>
                <!-- /#sidebar-wrapper -->
                <!-- Page Content -->
                <div id="page-content-wrapper">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                @RenderBody()
                                @*<input type="submit" id="menu-toggle" class="btn btn-default" value="Toggle Menu" />*@
                                @*<a href="#" class="btn btn-default" id="menu-toggle">Toggle Menu</a>*@
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /#page-content-wrapper -->

            </div>
            <!-- /#wrapper -->



        </div>
    </div><!-- /.container -->
    
    <div id="footer" class="pull-right">
        <div class="pull-right">
            &copy; @DateTime.Now.Year - AmarTaka - All rights reserved.
        </div>
    </div>
    
    @*<div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar no-padding">
                <h3 class="text-center page-header">Navigation</h3>
                
                @Html.Partial("_MenuPartial")
            </div>
            <div id="mainContentPage" class="col-sm-9  col-md-10  main no-padding">
                @RenderBody()

            </div>
        </div>
    </div>*@
    @*<footer class="footer">
        
        <div class="container-fluid">
            <div class="row">
                <p class="pull-right" style="margin-right:5px; font-size:.8em !important">&copy; @DateTime.Now.Year - Arrivo Ltd. All rights reserved.</p>
            </div>
        </div>
    </footer>*@

    <script>
        $(document).ready(function () {
            
            var wh = $("#sidebar-wrapper").height();
            
            $("#sidebar-wrapper").css("height", (wh - 70));
        })
        $("#menu-toggle").click(function (e) {
            //alert("fired");
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
            $("#ManageTransferPage").toggleClass("toggled");
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
