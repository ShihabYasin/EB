@{
    ViewBag.Title = "PasswordNotification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-center page-header">Register</h3>
@*<hr class="page-header-seperator" />*@
<div class="container">
    <div class="bordered-container">
        <span class=" border-title">
            Password Notification
        </span>
        <div class="bordered-container-inner">
            <div class="container" style="color:green">
                @if (ViewBag.Message != null)
                {
                    @ViewBag.Message
                }
            </div>

            <div class="container">
                <div class="col-md-2">
                    Your Password:
                </div>
                <div class="col-md-6" style="color:red">
                    @if (ViewBag.Pass != null)
                    {
                        @ViewBag.Pass
                    }
                </div>
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        You can change your Password by clicking your User Name on Top.
                    </div>
                </div>
                <div class="form-group">
                    <div style="margin-left:20px;">
                        @Html.ActionLink("Home", "Index", "Home", new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>