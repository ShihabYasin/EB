@model eBanking.Models.UserCreateViewModel
@{
    ViewBag.Title = "Create User";

    if (ViewBag.Menu != null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<h3 class="text-center page-header">Admin</h3>
@*<hr class="page-header-seperator" />*@
<div class="container">
    <div class="bordered-container">
        <span class=" border-title">
            Create New User
        </span>
        <div class="bordered-container-inner">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })<span style="color:red">*</span>
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })<span style="color:red">*</span>
                        <div class="col-md-6">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })<span style="color:red">*</span>
                        <div class="col-md-6">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RoleName, new { @class = "control-label col-md-2" })<span style="color:red">*</span>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.RoleName, ViewData["RoleName"] as SelectList, "[Select]", new { @class="form-control"})
                            <br />
                            @Html.ValidationMessageFor(model => model.RoleName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn btn-success">Create</button>
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })

                            @*@Ajax.ActionLink("Cancel", "Index", "Admin", new { ajaxLoad = 1 },
                                                    new AjaxOptions
                                                    {
                                                        HttpMethod = "GET",
                                                        InsertionMode = InsertionMode.Replace,
                                                        UpdateTargetId = "mainContentPage"
                                                        //OnBegin = "show_loading",
                                                        //OnComplete = "hide_loading"
                                                    },
                                                 new { @class = "btn btn-primary" }
                                                )*@
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

    
